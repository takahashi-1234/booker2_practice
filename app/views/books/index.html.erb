<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render "books/new",book:@book %>
    </div>
    <div class="col-lg-9">
      <h3>投稿一覧</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>title</th>
            <th>body</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>