<h3>投稿一覧</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>body</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td><a href="/users/<%=book.user.id %>"><%= attachment_image_tag book.user,:profile_image,fallback:"no_image.jpg",size:"60x70" %></a></td>
      <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
      <td><%= book.body %></td>
      <% if book.user.id==current_user.id %>
        <td><%= link_to "削除",book_path(book.id) ,method: :delete ,"data-confirm"=>"本当に削除しますか？",class:"btn btn-danger" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>